{
  "name": "@recursive/user-interface",
  "version": "2.0.0",
  "description": "Recursive UI Module - Modern TypeScript-based frontend architecture",
  "type": "module",
  "main": "src/core/app.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build:analyze": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "build:stats": "vite build --mode production && echo 'Build analysis available at: build/bundle-analysis.html'",
    "serve": "vite preview --port 3002",
    "clean": "rimraf build",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write src/**/*.{ts,tsx,scss}",
    "preload-test": "node scripts/test-preload.js"
  },
  "keywords": [
    "recursive",
    "ui",
    "typescript",
    "vite",
    "modular",
    "frontend"
  ],
  "author": "Recursive Team",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "jsdom": "^23.0.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.69.0",
    "terser": "^5.43.1",
    "vite-bundle-analyzer": "^0.22.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
